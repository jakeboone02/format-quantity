{
  "version": "0.1.0",
  "name": "format-quantity",
  "author": "Jake Boone <jakeboone02@gmail.com>",
  "license": "MIT",
  "keywords": [
    "recipe",
    "ingredient",
    "quantity",
    "number",
    "format",
    "string"
  ],
  "bugs": {
    "url": "https://github.com/jakeboone02/format-quantity/issues"
  },
  "homepage": "https://github.com/jakeboone02/format-quantity",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeboone02/format-quantity"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/format-quantity.esm.js",
  "unpkg": "dist/format-quantity.umd.production.min.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --format cjs,esm,system,umd",
    "build": "tsdx build --format cjs,esm,system,umd --name format-quantity",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "tabWidth": 2
  },
  "size-limit": [
    {
      "path": "dist/format-quantity.cjs.production.min.js",
      "limit": "1 KB"
    },
    {
      "path": "dist/format-quantity.esm.js",
      "limit": "1 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "husky": "^5.0.9",
    "np": "^7.3.0",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  }
}
